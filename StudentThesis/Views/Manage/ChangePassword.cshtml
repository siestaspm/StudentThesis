@model StudentThesis.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}




<div class="container-fluid py-4">

    <div class="card shadow mb-4">
        <div class="card-header py-3" style="background-image: linear-gradient(to bottom right, #2EAAFA, #8C04DB); ">
            <h4 class="m-0 font-weight-bold text-white">Change Password</h4>
        </div>
        <div class="card-body">

            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="col">
                    <div class="form-floating mb-3">
                        @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", @id = "floatingInput", @placeholder = " " } })
                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                        <label>Old Password</label>
                    </div>
                </div>

                <div class="col">
                    <div class="form-floating mb-3">
                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @id = "floatingInput", @placeholder = " " } })
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        <label>New Password</label>
                    </div>
                </div>

                <div class="col">
                    <div class="form-floating mb-3">
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @id = "floatingInput", @placeholder = " " } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        <label>Confirm Password</label>
                    </div>
                </div>

               

                <div class="form-group">
                    <button type="submit" value="Change password" class="btn btn-light rounded-pill" style="background-image: linear-gradient(to bottom left,#C7F800, #078513); color: white;">
                        <i class="bx bxs-save" style="color: #ffffff;"></i> Save Password
                    </button>
                  
                </div>



            }


            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
