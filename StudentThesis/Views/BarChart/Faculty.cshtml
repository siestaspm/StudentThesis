@model IEnumerable<StudentThesis.Models.Thesis>

@{
    ViewBag.Title = "Index";
}

<section class="section dashboard">
    <div class="container-fluid py-4 ">
        <div class="card">

            <div class="card-body">
                <div class="filter">
                    <a class="icon" href="~/FacultyTheses/Index"><i class='bx bx-table'></i></a>

                </div>
                <h5 class="card-title">Faculty Thesis Year of Creation</h5>

                <!-- Bar Chart -->
                <canvas id="barChart" style="max-height: 400px;"></canvas>
                <script>
                    document.addEventListener("DOMContentLoaded", () => {
                        fetch('/Barchart/GetThesisTitleAndYearFaculty')
                            .then(response => response.json())
                            .then(data => {
                                const years = data.Years;
                                const counts = data.Counts;
                                const backgroundColors = [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(255, 159, 64, 0.2)',
                                    'rgba(255, 205, 86, 0.2)',
                                    'rgba(75, 192, 192, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                    'rgba(153, 102, 255, 0.2)',
                                    'rgba(201, 203, 207, 0.2)'
                                ];
                                const borderColors = [
                                    'rgb(255, 99, 132)',
                                    'rgb(255, 159, 64)',
                                    'rgb(255, 205, 86)',
                                    'rgb(75, 192, 192)',
                                    'rgb(54, 162, 235)',
                                    'rgb(153, 102, 255)',
                                    'rgb(201, 203, 207)'
                                ];

                                new Chart(document.querySelector('#barChart'), {
                                    type: 'bar',
                                    data: {
                                        labels: years.map(String),
                                        datasets: [{
                                            label: 'Thesis Year',
                                            data: counts,
                                            backgroundColor: backgroundColors.slice(0, years.length),
                                            borderColor: borderColors.slice(0, years.length),
                                            borderWidth: 1
                                        }]
                                    },
                                    options: {
                                        scales: {
                                            y: {
                                                beginAtZero: true
                                            }
                                        }
                                    }
                                });
                            })
                            .catch(error => {
                                console.error(error);
                            });
                    });
                </script>
                <!-- End Bar Chart -->
            </div>
        </div>
    </div>
</section>