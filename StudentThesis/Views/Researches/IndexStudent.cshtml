@model IEnumerable<StudentThesis.Models.Research>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid py-4 ">

    <div class="card shadow mb-4">
        <div class="card-header  py-3" style="background-image: linear-gradient(to bottom right, #2EAAFA, #8C04DB); ">
            <div class="d-flex align-items-center justify-content-between">

                <h4 class="m-0 font-weight-bold text-white">Research List</h4>
                <button type="button" class="btn btn-success rounded-pill" style="background-image: linear-gradient(to bottom right,#96E084, #66995A); ">
                    <i class="bx bx-plus" style="color: #ffffff;"></i>
                    @Html.ActionLink("Add New Research", "Create", null, new { @style = "color:white;" })
                </button>
            </div>
        </div>
        <div class="card-body">
            <br />
            <div class="table-responsive">

                <table class="table datatable table-bordered table-hover" id="" width="100%" cellspacing="0">
                    <thead style="background-image: linear-gradient(#FFFFFF, #E7E7E7);">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Year)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Keywords)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ThesisAdviser)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TechnicalCritic)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Abstract)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TypeOfResearch)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ThematicArea)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FullPaper)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AuthorCategory.AuthorCategory1)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>


                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @(((DateTime)item.Year).ToString("yyyy"))
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Keywords)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ThesisAdviser)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TechnicalCritic)
                                </td>
                                <td>
                                    @if (item.Abstract != null && item.Abstract.Length > 0)
                                    {
                                        @Html.ActionLink("Download Abstract", "DownloadAbstract", new { id = item.ResearchID })
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TypeOfResearch)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ThematicArea)
                                </td>
                                <td>
                                    @if (item.FullPaper != null && item.FullPaper.Length > 0)
                                    {
                                        @Html.ActionLink("Download Full Paper", "DownloadFullPaper", new { id = item.ResearchID })
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AuthorCategory.AuthorCategory1)
                                </td>
                                <td style="text-align:center; vertical-align:middle;">
                                    <div class="btn-group-vertical">



                                        <button type="button" class="btn btn-light rounded  mb-2" style="background-image: linear-gradient(to bottom right,#320002, #880816);">
                                            @Html.ActionLink(" ", "StudentArchive", new { id = item.ResearchID }, new { @style = "color:white;", @class = " bx bxs-trash" })
                                        </button>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





